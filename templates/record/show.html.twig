    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ record.id }}</td>
            </tr>
            <tr>
                <th>Datetime</th>
                <td>{{ record.datetime ? record.datetime|date('Y-m-d H:i:s') : '' }}</td>
